{
  "manifest_version": 3,
  "name": "YouTube Keyboard Navigator",
  "version": "1.0.0",
"description": "Full keyboard navigation for YouTube â€“ control playback and navigate videos, sidebar, and search using intuitive shortcuts.",
  "icons": {
  "16": "icons/icon16.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
  },
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_title": "YouTube Keyboard Navigator",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
